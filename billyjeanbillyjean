<body>
    <h1>Chip Counter Program</h1>
    <p>This program</p>
    <script>
    var nTotalValue=0, nTotalCount=0, sEntry, nQty;
    sEntry=prompt("Enter Quantity Black Chips ", "0")
    nQty=parseint(sEntry);
    nTotalValue=nQty*5+nTotalValue;
    nTotalCount=nTotalCount+nQty;
    document.write("<h2>Black Chips Qty="+nQty+
    ", Value=$"+nQty*5+"<h2>");
    sEntry=prompt("Enter Quantity Blue Chips ", "0")
    nQty=parseint(sEntry);
    nTotalValue=nQty*20+nTotalValue;
    nTotalCount=nTotalCount+nQty;
    document.write("<h2>Blue Chips Qty="+nQty+
    ", Value=$"+nQty*20+"<h2>");
    sEntry=prompt("Enter Quantity Red Chip ", "0")
    nQty=parseint(sEntry);
    nTotalValue=nQty*50+nTotalValue;
    nTotalCount=nTotalCount+nQty;
    document.write("<h2>Red Chips Qty="+nQty+
    ", Value=$"+nQty*50+"<h2>");
    sEntry=prompt("Enter Quantity Green Chips ", "0")
    nQty=parseint(sEntry);
    nTotalValue=nQty*100+nTotalValue;
    nTotalCount=nTotalCount+nQty;
    document.write("<h2>Green Chips Qty="+nQty+
    ", Value=$"+nQty*100+"<h2>");
    document.write("<h1 style='color: blue'>All Chips Quantity="
    +nTotalCount+ "<br>All Chips Value = $"+nTotalValue+"<h1>");
    </script>
</body>    
